										%label{:for => 'select'} Select
										%select{:id => 'select', :name => 'select'}
											%optgroup{:label => 'Option Group'}
												%option{:value => 'option1'} Option 1
									%li
										%label{:for => 'radio1'} Radio 1
										%input{:id => 'radio1', :name => 'radio', :type => 'radio', :value => 'radio'}
										%label{:for => 'radio2'} Radio 2
										%input{:id => 'radio2', :name => 'radio', :type => 'radio', :value => 'radio'}
									%li
										%label{:for => 'checkbox'} Checkbox
										%input{:id => 'checkbox', :name => 'checkbox', :type => 'checkbox', :value => 'checkbox'}
									%li
										%input{:id => 'submit', :name => 'submit', :type => 'submit'}
						%hr
					%div{:id => 'ui', :class => 'page'}